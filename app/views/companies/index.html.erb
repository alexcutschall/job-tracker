<div class="page-header">
  <h1>All Companies</h1>
  <h4><%= link_to "Create a New Company", new_company_path %></h4><br>
</div>

<div id="main-container" class="container-fluid">
  <div class="row">
    <ul class="list-group">
      <% @companies.each do |company| %>
      <li class="list-group-item" <%= company.id %>
        <%= link_to company.name, company_path(company) %>
        <%= link_to "Edit", edit_company_path(company), class: "btn btn-primary btn-sm" %>
        <%= link_to "Delete", company_path(company), method: "delete", data: {confirm: "Are you sure you want to delete #{company.name}?"}, class: "btn btn-primary btn-sm" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
