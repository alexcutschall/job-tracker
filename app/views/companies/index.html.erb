<div class="page-header">
  <h1>All Companies</h1>
  <div class="create-link"><%= link_to "Create a New Company", new_company_path %></div>
</div>

<%= render partial: "partial/flash" %>

<table id="table" class="table table-striped table-hover table-responsive">
  <% @companies.each do |company| %>
    <tr class="company_<%= company.id %>">
      <td scope="row"><%= link_to company.name, company_path(company) %></td>
      <td scope="row"><%= link_to "Edit", edit_company_path(company), class: "btn btn-primary btn-sm" %></td>
      <td scope="row"><%= link_to "Delete", company_path(company), method: "delete", data: {confirm: "Are you sure you want to delete #{company.name}?"}, class: "btn btn-primary btn-sm" %></td>
    </tr>
  <% end %>
</table>
