<div class="page-header">
  <h1>Job Categories</h1>
  <div class="create-link"><%= link_to "Create A New Category", new_category_path %></div>
</div>

<%= render partial: "partial/flash" %>

<table id="table" class="table table-striped table-hover table-responsive">
  <% @categories.each do |category| %>
    <tr class="category_<%= category.id %>">
      <td scope="row"><%= link_to category.title, "/jobs?category=#{category.id}" %></td>
      <td scope="row"><%= link_to "#{category.jobs.count} Jobs", category_path(category) %></td>
      <td scope="row"><%= link_to "Edit", edit_category_path(category), class: "btn btn-primary btn-sm" %></td>
      <td scope="row"><%= link_to "Delete", category_path(category), method: "delete", data: {confirm: "Are you sure you want to delete this category?"}, class: "btn btn-primary btn-sm" %></td>
    </tr>
  <% end %>
</table>
